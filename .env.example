# Application Settings
APP_NAME=Starlight API
APP_VERSION=0.1.0
APP_DESCRIPTION="Enterprise FastAPI REST API Framework"
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
SECRET_KEY=development-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/starlight_db
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/starlight_db
DATABASE_URL_TEST=sqlite+aiosqlite:///./test.db
DATABASE_URL_TEST_SYNC=sqlite:///./test.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_POOL_PRE_PING=true
DATABASE_ECHO=false

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600
REDIS_SESSION_TTL=86400

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8000"]

# Email Settings
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password-here
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=Starlight API

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=["jpg","jpeg","png","gif","pdf","doc","docx"]
UPLOAD_FOLDER=./uploads

# Monitoring  Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=8090
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
JAEGER_ENDPOINT=http://localhost:14268/api/traces
DATADOG_API_KEY=your-datadog-api-key-here
NEWRELIC_LICENSE_KEY=your-newrelic-license-key-here

# OAuth Settings
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Prometheus and Grafana
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Celery Monitoring
FLOWER_BASIC_AUTH=user:password
CELERY_ENABLE_UTC=true
CELERY_TIMEZONE=UTC
CELERY_WORKER_CONCURRENCY=4

# AWS Settings (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=

# Testing
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db
TEST_REDIS_URL=redis://localhost:6379/15
