# ðŸš€ Simple Development Configuration
# Copy this to .env for quick local development

# Basic Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production-please

# Database (SQLite - no setup required)
DATABASE_URL=sqlite+aiosqlite:///./starlight.db

# Redis (optional - app will work without it)
REDIS_URL=redis://localhost:6379/0

# Security (development defaults)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:8000"]
TRUSTED_HOSTS=["*"]

# Rate Limiting (lenient for development)
RATE_LIMIT_PER_MINUTE=1000

# Optional Features (disable if not needed)
ENABLE_METRICS=false
ENABLE_PROFILING=false

# OAuth (optional - leave empty if not using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# AWS S3 (optional - leave empty for local storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=

# Monitoring (optional)
SENTRY_DSN=

# Background Tasks (optional - needs Redis)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
